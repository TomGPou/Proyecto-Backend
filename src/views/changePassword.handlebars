<style>
  body { background-color: #333; } .login-container { max-width: 360px; margin:
  auto; margin-top: 64px; padding: 32px; border-radius: 0.5em; color: #333;
  border: 1px solid #bbb; background-color: #ccc; } .a2 { color: #333; }
  .a2:hover { color: #000; }
</style>
<div class="login-container">
  <h1><b>CODERStore</b></h1>
  <h2><b>Nueva contraseña</b></h2>

  <form
    action="/api/auth/changepassword/{{id}}"
    method="post"
    style="margin-top: 32px;"
  >

    <div class="input-group" style="width: 300px; margin-bottom: 32px;">
      <span class="input-group-text" id="group2"><i
          class="fa-solid fa-lock"
        ></i></span>
      <input
        type="password"
        name="password"
        class="form-control"
        placeholder="Ingrese nueva contraseña"
        required="required"
        autofocus="autofocus"
      />
    </div>

    <button type="submit" class="btn btn-success">Ingresar</button>
  </form>
</div>